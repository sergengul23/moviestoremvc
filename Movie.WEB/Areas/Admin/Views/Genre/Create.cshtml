@using Models.Entities
@model Genre

<style>
    .form-control:focus{
        box-shadow: none;
    }
</style>


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black">Create Genre</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for=Name></label>
            <input asp-for=Name class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width: 150px; height: 60px; border-radius: 8px;">Create</button>
        <a asp-controller="Genre" asp-action="Index" class="btn btn-outline-danger" style="width: 150px; height: 60px; line-height: 2.25; border-radius: 8px;">Back</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}